{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2015"],
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"]
}
